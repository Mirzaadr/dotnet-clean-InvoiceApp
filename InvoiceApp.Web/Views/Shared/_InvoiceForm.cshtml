@model InvoiceFormDTO

@{
    var isEdit = Model.Id != Guid.Empty;
    var action = isEdit ? "Edit" : "Create";
}

<form asp-action="@action" method="post" id="invoiceForm">
    @if (isEdit)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="ClientId"></label>
        <input asp-for="ClientId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IssueDate"></label>
        <input asp-for="IssueDate" class="form-control" type="date" />
    </div>

    <h4>Invoice Items</h4>
    <table class="table table-bordered" id="itemsTable">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="itemRows">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr data-index="@i">
                    <td>
                        <span class="display">@Model.Items[i].ProductId</span>
                        <input name="Items[@i].ProductId" class="form-control edit-input d-none" value="@Model.Items[i].ProductId" />
                    </td>
                    <td>
                        <span class="display">@Model.Items[i].ProductName</span>
                        <input name="Items[@i].ProductName" class="form-control edit-input d-none" value="@Model.Items[i].ProductName" />
                    </td>
                    <td>
                        <span class="display">@Model.Items[i].Quantity</span>
                        <input name="Items[@i].Quantity" type="number" class="form-control edit-input d-none" value="@Model.Items[i].Quantity" />
                    </td>
                    <td>
                        <span class="display">@Model.Items[i].UnitPrice</span>
                        <input name="Items[@i].UnitPrice" type="number" step="0.01" class="form-control edit-input d-none" value="@Model.Items[i].UnitPrice" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-secondary edit-row">Edit</button>
                        <button type="button" class="btn btn-sm btn-success save-row d-none">Save</button>
                        <button type="button" class="btn btn-sm btn-danger remove-item">Delete</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <button type="button" class="btn btn-secondary" id="addItemBtn">Add Item</button>
    <br /><br />
    <button type="submit" class="btn btn-primary">@action</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
