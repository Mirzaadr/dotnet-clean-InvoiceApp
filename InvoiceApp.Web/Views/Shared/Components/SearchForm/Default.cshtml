@model SearchFormViewModel
@{
    var action = Model.Action ?? "Index";
}

<form asp-action="@action" method="get" class="d-flex" role="search">
    <div class="input-group">
        <input name="search" class="form-control" type="search" placeholder="Search..." value="@Model.SearchTerm" />

        @if (!string.IsNullOrEmpty(Model.SearchTerm as string))
        {
            <a href="@Url.Action(action)" class="btn btn-outline-secondary">
                <i class="bi bi-x-lg"></i>
            </a>
        }

        <button class="btn btn-outline-secondary" type="submit">
            <i class="bi bi-search"></i>
        </button>
    </div>
</form>