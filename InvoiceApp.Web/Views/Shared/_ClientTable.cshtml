@model List<ClientDto>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Email</th>
            @* <th>Address</th> *@
            <th>Created</th>
            <th>Last Update</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center">No clients found.</td>
            </tr>
        }
        @for (var i=0; i < Model.Count; i++)
        {
            <tr>
                <td style="width: 30px;">@(i+1)</td>
                <td>@Model[i].Name</td>
                <td style="max-width: 200px;" class="text-truncate">@Model[i].Email</td>
                @* <td style="max-width: 200px;" class="text-truncate">@Model[i].Address</td> *@
                <td>@Model[i].CreatedDate?.ToString("MM/dd/yyyy")</td>
                <td>@Model[i].UpdatedDate?.ToString("MM/dd/yyyy")</td>
                <td>
                    <a href="@Url.Action("Details", "Clients", new { id = Model[i].Id })" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="@Url.Action("Edit", "Clients", new { id = Model[i].Id })" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a href="@Url.Action("Delete", "Clients", new { id = Model[i].Id })" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>