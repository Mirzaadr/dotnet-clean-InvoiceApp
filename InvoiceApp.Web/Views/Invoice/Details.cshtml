@model InvoiceDTO

@{
    ViewData["Title"] = "Invoice Details";
}

<div class="text-start mb-5">
    <h1 class="display-6">@ViewData["Title"]</h1>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Invoice Number</dt>
        <dd class="col-sm-10">@Model.InvoiceNumber</dd>

        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.ClientName</dd>

        <dt class="col-sm-2">Issue Date</dt>
        <dd class="col-sm-10">@Model.IssueDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>
    </dl>

    <h4>Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity * item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
