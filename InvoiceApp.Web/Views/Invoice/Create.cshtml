@model InvoiceFormViewModel

@{
    ViewData["Title"] = "Create Invoice";
}

<div class="text-start mb-5">
    <h1 class="display-6">@ViewData["Title"]</h1>
</div>

<partial name="./Shared/_InvoiceForm" model="Model" />

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="~/css/select2-style.css" />
    
    <script src="~/js/invoice-form.js"></script>

    <script>
        @* initialize first row if empty*@
        if ($("#invoice-items-body tr").length < 1) {
            addInvoiceItemRow();
        }
    </script>

}