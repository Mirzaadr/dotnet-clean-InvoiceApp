@model ClientDto
@{
    var isEdit = Model.Id != Guid.Empty;
    var action = isEdit ? "Edit" : "Create";
}

<form method="post" asp-action="@action">
    <div class="row mb-3">
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header">
                    Client Details
                </div>
                <div class="card-body">
                    @if (isEdit) {
                      <input asp-for="Id" readonly hidden >
                    }
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Client Name</label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" >
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Address</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="Address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-4 col-form-label">Phone Number</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary me-2">Save</button>
    <a href="/Clients" class="btn btn-outline-primary" role="button">Back</a>
</form>